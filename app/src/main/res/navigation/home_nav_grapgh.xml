<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_nav_grapgh"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.foodplanner.view.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_mealDetailsFragment"
            app:destination="@id/mealDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_categoryMealFragment"
            app:destination="@id/categoryMealFragment" />
    </fragment>
    <fragment
        android:id="@+id/mealDetailsFragment"
        android:name="com.example.foodplanner.view.meal_details.MealDetailsFragment"
        android:label="fragment_meal_details"
        tools:layout="@layout/fragment_meal_details" >
        <argument
            android:name="Meal"
            app:argType="com.example.foodplanner.model.dto.RandomMealResponse$MealsItem"
            app:nullable="true" />
    </fragment>
    <fragment
        android:id="@+id/categoryMealFragment"
        android:name="com.example.foodplanner.view.meal_by_category.CategoryMealFragment"
        android:label="fragment_category_meal"
        tools:layout="@layout/fragment_category_meal" >
        <argument
            android:name="Category"
            app:argType="com.example.foodplanner.model.dto.CategoryResponse$CategoriesItem"
            app:nullable="true" />
    </fragment>
</navigation>